        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.common.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.common.RegisterUserActivity" />
        <activity android:name=".activities.common.LoginActivity" />
        <activity android:name=".activities.manager.CreateElementActivity" />
        <activity android:name=".activities.manager.ManagerMainActivity" />
        <activity android:name=".activities.player.PlayerMainActivity" />
        <activity android:name=".activities.VerifyUserActivity" />
        <activity android:name=".activities.common.UpdateUserActivity" />
        <activity android:name=".activities.player.BillboardElementActivity" />
        <activity android:name=".activities.manager.UpdateElementActivity" />
