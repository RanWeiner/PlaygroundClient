<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#481020"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".activities.common.RegisterUserActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/logo"
        />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Username"
    android:textColor="@color/white"
    android:textColorHint="@color/white"
    android:inputType="textPersonName"
    android:drawableLeft="@drawable/ic_username"
    android:drawablePadding="5dp"
    android:id="@+id/username_text"/>

    <EditText
        android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Email"
    android:textColor="@color/white"
    android:textColorHint="@color/white"
    android:inputType="textEmailAddress"
    android:drawableLeft="@drawable/ic_email"
    android:drawablePadding="5dp"
    android:id="@+id/email_text"/>


    <RadioGroup
    android:layout_marginTop="20dp"
    android:id="@+id/radiogroup_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <RadioButton
    android:id="@+id/player_radio_btn"
    android:text="Player"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:onClick="onRoleRadioBtnClicked"
    android:checked="true"/>

    <RadioButton
    android:id="@+id/manager_radio_btn"
    android:text="Manager"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onRoleRadioBtnClicked"/>

    </RadioGroup>


<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:text="Select Avatar:"
        />

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar_btn_id"
        android:background="@null"
        android:src="@drawable/attach" />


</LinearLayout>



    <ProgressBar
        android:id="@+id/register_progress_bar_id"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
    android:background="#c2c2c2"
    android:textColor="#491222"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Register"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="40dp"
    android:id="@+id/register_activiy_register_btn"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/verify_code_btn"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:textSize="12dp"
        android:text="Verify code" />


</LinearLayout>

